{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 1500,
  "height": 1000,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/WongJunKang/FIT3179/main/Assignment2/js/newyork.topojson",
        "format": {
          "type": "topojson",
          "feature": "newyork"
        }
      },
      "projection": {
        "type": "equalEarth"
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/WongJunKang/FIT3179/main/Assignment2/data/Murder.csv"
      },
      "projection": {
        "type": "equalEarth"
      },
      "mark": "circle",
      "encoding": {
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "size": {"value": 30},
        "color": {"value": "darkblue"}
      }
    }
  ]
}
