{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 300, "height": 300,
  "data": {
      "url": "https://raw.githubusercontent.com/WongJunKang/FIT3179/main/Assignment2/data/Serious_Crime.csv"
  },
  "title": {"text":"Offence Count of Year by Month", "fontSize":20},
  "config": {
      "view": {
          "strokeWidth": 0,
          "step": 13
      },
      "axis": {
          "domain": false
      }
  },
  "mark": "rect",
  "encoding": {
      "x": {
          "field": "ARREST_DATE",
          "timeUnit": "month",
          "type": "ordinal",
          "title": "Month",
          "axis": {
              "labelAngle": 0,
              "labelFontSize":15,
              "titleFontSize":15
          }
      },
      "y": {
          "field": "ARREST_DATE",
          "timeUnit": "year",
          "type": "ordinal",
          "title": "Year",
          "axis": {
              "labelAngle": 0,
              "labelFontSize":15,
              "titleFontSize":15,
              "labelSeparation":20
          }
      },
      "color": {
          "field": "ARREST_KEY",
          "aggregate": "count",
          "type": "quantitative",
          "scale": {"range": ["#FFFFFF", "#ff3300", "#000000" ]},
          "legend": {
              "title": null
          }
      },
      "tooltip": [
        {"field": "ARREST_DATE","timeUnit":"yearmonth","type": "ordinal", "title":"Arrest Year/Month"},
        {"aggregate": "count","type": "quantitative", "title":"Offence Counts"}]
  }
}
